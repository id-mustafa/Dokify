{
    "name": "dokify",
    "version": "0.1.3",
    "private": false,
    "description": "Dokify CLI - generate and upload documentation for your codebase",
    "bin": {
        "dok": "dist/cli.js"
    },
    "type": "module",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "postbuild": "chmod +x dist/cli.js || true",
        "dev": "ts-node --esm src/cli.ts",
        "start": "node dist/cli.js",
        "clean": "rm -rf dist",
        "mock:server": "npm run build && node dist/dev/mock-server.js",
        "web:dev": "npm --prefix web run dev",
        "web:build": "npm --prefix web run build",
        "web:preview": "npm --prefix web run preview",
        "server:dev": "npm --prefix server run dev",
        "server:build": "npm --prefix server run build",
        "server:start": "npm --prefix server run start"
    },
    "engines": {
        "node": ">=18.17.0"
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^12.1.0",
        "dotenv": "^16.4.5",
        "fast-glob": "^3.3.2",
        "ignore": "^5.3.1",
        "js-yaml": "^4.1.0",
        "ora": "^8.0.1",
        "undici": "^6.19.8",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^22.7.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3"
    }
}
