{
    "name": "dokify",
    "version": "0.1.0",
    "private": false,
    "description": "Dokify CLI - generate and upload documentation for your codebase",
    "bin": {
        "dok": "dist/cli.js"
    },
    "type": "module",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "postbuild": "chmod +x dist/cli.js || true",
        "dev": "ts-node --esm src/cli.ts",
        "start": "node dist/cli.js",
        "clean": "rm -rf dist"
    },
    "engines": {
        "node": ">=18.17.0"
    },
    "dependencies": {
        "commander": "^12.1.0",
        "chalk": "^5.3.0",
        "ora": "^8.0.1",
        "zod": "^3.23.8",
        "fast-glob": "^3.3.2",
        "ignore": "^5.3.1",
        "js-yaml": "^4.1.0",
        "undici": "^6.19.8"
    },
    "devDependencies": {
        "typescript": "^5.6.3",
        "ts-node": "^10.9.2",
        "@types/node": "^22.7.6"
    }
}