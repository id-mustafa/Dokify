{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "rootDir": "src",
        "outDir": "dist",
        "declaration": false,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ]
}